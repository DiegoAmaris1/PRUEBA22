        }
        
        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(10, 14, 26, 0.95);
            backdrop-filter: blur(10px);
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }
        
        .loading.active {
            display: flex;
        }
        
        .spinner-container {
            position: relative;
            width: 100px;
            height: 100px;
            margin-bottom: 30px;
        }
        
        .spinner {
            position: absolute;
            width: 100%;
            height: 100%;
            border: 3px solid transparent;
            border-radius: 50%;
            animation: spin 1.5s linear infinite;
        }
        
        .spinner:nth-child(1) {
            border-top-color: #f06e49;
            animation-duration: 1.5s;
        }
        
        .spinner:nth-child(2) {
            border-right-color: #0077B5;
            animation-duration: 2s;
            animation-direction: reverse;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .loading-text {
            color: #e0e0e0;
            font-size: 18px;
